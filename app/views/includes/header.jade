header#header
  .navbar.navbar-fixed-top(role='navigation')
    .navbar-inner
      .container
        a.brand(href='/') Kanari
        .nav-collapse.collapse
          ul.nav
            li(class=isActive('/events/new') ? 'active' : '')
              a(href="/events/new", title="new event") New
          ul.nav.pull-right
            if (req.isAuthenticated())
              li(class=isActive("/users/"+req.user.id) ? 'active' : '')
                a(href="/users/"+req.user.id, title="Profile") Profile
              li
                a(href="/logout", title="logout") Logout
            else
              li(class=isActive("/login") ? 'active' : '')
                a(href="/login", title="Login") Login